#!/usr/bin/env zsh
set -eu -o pipefail

cd "$(dirname "$0")"

rm -rf nimbus-eth2
git clone -b "dev/etan/lc-wasm" "https://github.com/status-im/nimbus-eth2"
cd nimbus-eth2

ulimit -n 1024
export USE_SYSTEM_NIM=0
make -j deps
source env.sh

cd -
nim --version

git -C nimbus-eth2/vendor/nimbus-build-system/vendor/Nim apply <<'EOF'
diff --git a/lib/system/threads.nim b/lib/system/threads.nim
index 4e27ba24e..bf154e874 100644
--- a/lib/system/threads.nim
+++ b/lib/system/threads.nim
@@ -383,6 +383,13 @@ when defined(windows):
       threadId = int(getCurrentThreadId())
     result = threadId

+elif defined(emscripten):
+  proc getThreadId*(): int =
+    ## Gets the ID of the currently running thread.
+    if threadId == 0:
+      threadId = cast[int](addr threadId)
+    result = threadId
+
 elif defined(linux):
   proc syscall(arg: clong): clong {.varargs, importc: "syscall", header: "<unistd.h>".}
   when defined(amd64):
EOF

rm -rf nimbus_light_client_ffi.js nimbus_light_client_ffi.wasm nimbus_light_client_ffi.worker.js nimcache
nim c \
    -d:disable_libbacktrace \
    -d:disableLTO \
    -d:emscripten \
    -d:release \
    --debuginfo:off \
    --nimcache:nimcache \
    --os:linux \
    --cpu:wasm32 \
    --cc:clang \
    --clang.exe:emcc \
    --clang.linkerexe:emcc \
    --gc:arc \
    --exceptions:goto \
    --define:noSignalHandler \
    --define:danger \
    --panics:on \
    --passC:-fpic \
    --passL:-Os \
    --passL:-fpic \
    --passC:'-pthread' \
    --passL:'-pthread' \
    --passC:'-sASSERTIONS' \
    --passL:'-sASSERTIONS' \
    --passC:'-sINITIAL_MEMORY=256MB' \
    --passL:'-sINITIAL_MEMORY=256MB' \
    --passC:'-sSTACK_SIZE=128MB' \
    --passL:'-sSTACK_SIZE=128MB' \
    --passC:'-sUSE_PTHREADS=1' \
    --passL:'-sUSE_PTHREADS=1' \
    --passL:'-sEXPORTED_FUNCTIONS="[_free, _malloc, _ECLRandomNumberCreate, _ECLNetworkConfigCreateFromYaml, _ECLNetworkConfigGetConsensusVersionAtEpoch, _ECLBeaconStateCreateFromSsz, _ECLBeaconStateDestroy, _ECLBeaconStateCopyGenesisValidatorsRoot, _ECLForkDigestsCreateFromState, _ECLBeaconClockCreateFromState, _ECLBeaconClockGetSlot, _ECLLightClientStoreCreateFromBootstrap, _ECLLightClientStoreDestroy, _kECLLcSyncKind_UpdatesByRange, _kECLLcSyncKind_FinalityUpdate, _kECLLcSyncKind_OptimisticUpdate, _ECLLightClientStoreGetNextSyncTask, _ECLLightClientStoreGetMillisecondsToNextSyncTask, _ECLLightClientStoreProcessUpdatesByRange, _ECLLightClientStoreProcessFinalityUpdate, _ECLLightClientStoreProcessOptimisticUpdate, _ECLLightClientStoreGetFinalizedHeader, _ECLLightClientStoreGetOptimisticHeader, _ECLLightClientHeaderGetBeacon, _ECLBeaconBlockHeaderGetRoot, _ECLBeaconBlockHeaderGetSlot, _ECLBeaconBlockHeaderGetProposerIndex, _ECLBeaconBlockHeaderGetParentRoot, _ECLBeaconBlockHeaderGetStateRoot, _ECLBeaconBlockHeaderGetBodyRoot]"' \
    --passL:'-sEXPORTED_RUNTIME_METHODS="[lengthBytesUTF8, stringToNewUTF8]"' \
    --passL:'-Wl,--no-entry' \
    --noMain:on \
    --passL:'-o nimbus_light_client_ffi.js' \
    nimbus-eth2/beacon_chain/nimbus_light_client_ffi.nim
