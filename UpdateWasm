#!/usr/bin/env zsh
set -eu -o pipefail

cd "$(dirname "$0")"

rm -rf nimbus-eth2
git clone -b "dev/etan/lc-wasm" "https://github.com/status-im/nimbus-eth2"

ulimit -n 1024
USE_SYSTEM_NIM='' make -C nimbus-eth2 -j deps

git -C nimbus-eth2/vendor/nimbus-build-system/vendor/Nim apply <<'EOF'
diff --git a/lib/system/threads.nim b/lib/system/threads.nim
index 4e27ba24e..bf154e874 100644
--- a/lib/system/threads.nim
+++ b/lib/system/threads.nim
@@ -383,6 +383,13 @@ when defined(windows):
       threadId = int(getCurrentThreadId())
     result = threadId

+elif defined(emscripten):
+  proc getThreadId*(): int =
+    ## Gets the ID of the currently running thread.
+    if threadId == 0:
+      threadId = cast[int](addr threadId)
+    result = threadId
+
 elif defined(linux):
   proc syscall(arg: clong): clong {.varargs, importc: "syscall", header: "<unistd.h>".}
   when defined(amd64):
EOF

git -C nimbus-eth2 apply <<'EOF'
diff --git a/beacon_chain/spec/eth2_apis/eth2_rest_serialization.nim b/beacon_chain/spec/eth2_apis/eth2_rest_serialization.nim
index 17fae6cc..bbf71983 100644
--- a/beacon_chain/spec/eth2_apis/eth2_rest_serialization.nim
+++ b/beacon_chain/spec/eth2_apis/eth2_rest_serialization.nim
@@ -3357,9 +3357,10 @@ proc decodeBytes*[T: DecodeTypes](

   if mediaType == ApplicationJsonMediaType:
     try:
-      ok RestJson.decode(value, T,
-                         requireAllFields = true,
-                         allowUnknownFields = true)
+      let r = RestJson.decode(value, T,
+                              requireAllFields = true,
+                              allowUnknownFields = true)
+      ok r
     except SerializationError as exc:
       debug "Failed to deserialize REST JSON data",
             err = exc.formatMsg("<data>"),
EOF

USE_SYSTEM_NIM='' NIM_COMMIT='' BASH_VERSION='' NBS_ONLY_LOAD_ENV_VARS='' . nimbus-eth2/env.sh
nim --version

rm -rf libnimbus_lc.js libnimbus_lc.wasm libnimbus_lc.worker.js nimcache
nim c \
    -d:disable_libbacktrace \
    -d:disableLTO \
    -d:emscripten \
    -d:release \
    --debuginfo:off \
    --nimcache:nimcache \
    --os:linux \
    --cpu:wasm32 \
    --cc:clang \
    --clang.exe:emcc \
    --clang.linkerexe:emcc \
    --gc:arc \
    --exceptions:goto \
    --define:noSignalHandler \
    --define:danger \
    --panics:on \
    --passC:-fpic \
    --passL:-Os \
    --passL:-fpic \
    --passC:'-pthread' \
    --passL:'-pthread' \
    --passC:'-sASSERTIONS' \
    --passL:'-sASSERTIONS' \
    --passC:'-sINITIAL_MEMORY=256MB' \
    --passL:'-sINITIAL_MEMORY=256MB' \
    --passC:'-sSTACK_SIZE=128MB' \
    --passL:'-sSTACK_SIZE=128MB' \
    --passC:'-sUSE_PTHREADS=1' \
    --passL:'-sUSE_PTHREADS=1' \
    --passL:'-sEXPORTED_FUNCTIONS="[_free, _malloc, _ECLRandomNumberCreate, _ECLNetworkConfigCreateFromYaml, _ECLNetworkConfigGetConsensusVersionAtEpoch, _ECLBeaconStateCreateFromSsz, _ECLBeaconStateDestroy, _ECLBeaconStateCopyGenesisValidatorsRoot, _ECLRootDestroy, _ECLForkDigestsCreateFromState, _ECLBeaconClockCreateFromState, _ECLBeaconClockGetSlot, _ECLLightClientStoreCreateFromBootstrap, _ECLLightClientStoreDestroy, _kECLLcSyncKind_UpdatesByRange, _kECLLcSyncKind_FinalityUpdate, _kECLLcSyncKind_OptimisticUpdate, _ECLLightClientStoreGetNextSyncTask, _ECLLightClientStoreGetMillisecondsToNextSyncTask, _ECLLightClientStoreProcessUpdatesByRange, _ECLLightClientStoreProcessFinalityUpdate, _ECLLightClientStoreProcessOptimisticUpdate, _ECLLightClientStoreGetFinalizedHeader, _ECLLightClientStoreIsNextSyncCommitteeKnown, _ECLLightClientStoreGetOptimisticHeader, _ECLLightClientStoreGetSafetyThreshold, _ECLLightClientHeaderCopyBeaconRoot, _ECLLightClientHeaderGetBeacon, _ECLBeaconBlockHeaderGetSlot, _ECLBeaconBlockHeaderGetProposerIndex, _ECLBeaconBlockHeaderGetParentRoot, _ECLBeaconBlockHeaderGetStateRoot, _ECLBeaconBlockHeaderGetBodyRoot, _ECLLightClientHeaderCopyExecutionHash, _ECLLightClientHeaderGetExecution, _ECLExecutionPayloadHeaderGetParentHash, _ECLExecutionPayloadHeaderGetFeeRecipient, _ECLExecutionPayloadHeaderGetStateRoot, _ECLExecutionPayloadHeaderGetReceiptsRoot, _ECLExecutionPayloadHeaderGetLogsBloom, _ECLExecutionPayloadHeaderGetPrevRandao, _ECLExecutionPayloadHeaderGetBlockNumber, _ECLExecutionPayloadHeaderGetGasLimit, _ECLExecutionPayloadHeaderGetGasUsed, _ECLExecutionPayloadHeaderGetTimestamp, _ECLExecutionPayloadHeaderGetExtraDataBytes, _ECLExecutionPayloadHeaderGetNumExtraDataBytes, _ECLExecutionPayloadHeaderGetBaseFeePerGas, _ECLExecutionPayloadHeaderGetDataGasUsed, _ECLExecutionPayloadHeaderGetExcessDataGas]"' \
    --passL:'-sEXPORTED_RUNTIME_METHODS="[lengthBytesUTF8, stringToNewUTF8]"' \
    --passL:'-Wl,--no-entry' \
    --noMain:on \
    --passL:'-o libnimbus_lc.js' \
    nimbus-eth2/beacon_chain/libnimbus_lc/libnimbus_lc.nim
